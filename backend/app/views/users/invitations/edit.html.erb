<%= form_for resource,
  :as => resource_name,
  :url => invitation_path(resource_name),
  :html => { :method => :put, class: 'sign-in-page__form' } do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :invitation_token %>
  <h2 class="sign-in-page__form-title">Please create your password</h2>

  <% if f.object.class.require_password_on_accepting %>
    <div class="sign-in-page__input-wrapper">
      <%= f.label :password, class: 'sr-only' %>
      <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', placeholder: 'Enter an 8 character password', class: 'sign-in-page__text-input sign-in-page__text-input--top' %>

      <%= f.label :password_confirmation, class: 'sr-only' %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: 'Confirm password', class: 'sign-in-page__text-input sign-in-page__text-input--bottom' %>
    </div>
  <% end %>

  <div class="sign-in-page__instructions">
    Your password must contain at least <%= Devise.password_length.begin %> characters
  </div>

  <p><%= f.submit t("devise.invitations.edit.submit_button"), class: 'sign-in-page__submit-button' %></p>

  <div class="sign-in-page__problems">
    <span>Having problems? </span>

    <a
      class="sign-in-page__problems-link"
      href="mailto:performance-dashboard@digital.gov.au"
      rel="external noopener noreferrer"
      target="_blank"
    >
      Contact us
    </a>
  </div>
<% end %>
